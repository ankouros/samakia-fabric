{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RuntimeObservationPolicy",
  "type": "object",
  "additionalProperties": false,
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {"type": "string"},
    "kind": {"const": "RuntimeObservationPolicy"},
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version"],
      "properties": {
        "version": {"type": "string"},
        "owner": {"type": "string"}
      }
    },
    "spec": {
      "type": "object",
      "additionalProperties": false,
      "required": ["metrics", "actions"],
      "properties": {
        "metrics": {
          "type": "object",
          "additionalProperties": false,
          "required": ["observed", "informational", "ignored"],
          "properties": {
            "observed": {
              "type": "array",
              "items": {"$ref": "#/definitions/metric"}
            },
            "informational": {
              "type": "array",
              "items": {"$ref": "#/definitions/metric"}
            },
            "ignored": {
              "type": "array",
              "items": {"$ref": "#/definitions/metric"}
            }
          }
        },
        "actions": {
          "type": "object",
          "additionalProperties": false,
          "required": ["disallowed_triggers"],
          "properties": {
            "disallowed_triggers": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        }
      }
    }
  },
  "definitions": {
    "metric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "source"],
      "properties": {
        "name": {"type": "string"},
        "source": {"type": "string"},
        "unit": {"type": "string"},
        "description": {"type": "string"},
        "notes": {"type": "string"}
      }
    }
  }
}

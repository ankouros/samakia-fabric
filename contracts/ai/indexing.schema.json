{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AIIndexingContract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "embedding",
    "chunking",
    "sources",
    "exclusions",
    "redaction"
  ],
  "properties": {
    "apiVersion": {"type": "string"},
    "kind": {"type": "string"},
    "embedding": {
      "type": "object",
      "additionalProperties": false,
      "required": ["provider", "model"],
      "properties": {
        "provider": {"const": "ollama"},
        "model": {"const": "nomic-embed-text"}
      }
    },
    "chunking": {
      "type": "object",
      "additionalProperties": false,
      "required": ["chunk_size", "overlap", "max_chars"],
      "properties": {
        "chunk_size": {"type": "integer", "minimum": 200},
        "overlap": {"type": "integer", "minimum": 0},
        "max_chars": {"type": "integer", "minimum": 500}
      }
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["docs", "contracts", "runbooks", "evidence"]
      }
    },
    "exclusions": {
      "type": "object",
      "additionalProperties": false,
      "required": ["patterns"],
      "properties": {
        "patterns": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "redaction": {
      "type": "object",
      "additionalProperties": false,
      "required": ["action", "deny_patterns"],
      "properties": {
        "action": {"enum": ["deny"]},
        "deny_patterns": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        }
      }
    }
  }
}

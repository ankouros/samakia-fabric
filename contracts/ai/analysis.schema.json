{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AIAnalysisContract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "analysis_id",
    "requester_role",
    "tenant",
    "analysis_type",
    "inputs",
    "output_format",
    "max_tokens"
  ],
  "properties": {
    "apiVersion": {"type": "string"},
    "kind": {"type": "string"},
    "analysis_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9._-]{2,63}$"
    },
    "requester_role": {"enum": ["operator", "tenant-readonly"]},
    "tenant": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "scope"],
      "properties": {
        "id": {"type": "string"},
        "scope": {"enum": ["tenant", "platform"]}
      }
    },
    "analysis_type": {
      "enum": [
        "drift_explain",
        "slo_explain",
        "incident_summary",
        "plan_review",
        "change_impact",
        "compliance_summary"
      ]
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["evidence_refs", "time_window"],
      "properties": {
        "evidence_refs": {
          "type": "array",
          "minItems": 1,
          "maxItems": 20,
          "items": {
            "type": "string",
            "pattern": "^evidence/"
          }
        },
        "time_window": {
          "type": "object",
          "additionalProperties": false,
          "required": ["start_utc", "end_utc"],
          "properties": {
            "start_utc": {"type": "string"},
            "end_utc": {"type": "string"}
          }
        }
      }
    },
    "output_format": {"enum": ["markdown", "json"]},
    "max_tokens": {"type": "integer", "minimum": 256, "maximum": 4096}
  }
}

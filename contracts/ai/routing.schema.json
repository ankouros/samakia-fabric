{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AIRoutingPolicy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "defaults",
    "routes"
  ],
  "properties": {
    "apiVersion": {"type": "string"},
    "kind": {"type": "string"},
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "required": ["ops", "code", "embeddings"],
      "properties": {
        "ops": {"type": "string"},
        "code": {"type": "string"},
        "embeddings": {"type": "string"}
      }
    },
    "routes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["task", "model"],
        "properties": {
          "task": {"type": "string"},
          "model": {"type": "string"}
        }
      }
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SelfServiceDelegation",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "proposal_id",
    "delegated_to",
    "allowed_actions",
    "valid_from",
    "valid_until",
    "env",
    "reason"
  ],
  "properties": {
    "proposal_id": {"type": "string"},
    "delegated_to": {
      "type": "object",
      "additionalProperties": false,
      "required": ["operator_role"],
      "properties": {
        "operator_role": {"type": "string"},
        "automation_role": {"type": "string"}
      }
    },
    "allowed_actions": {
      "type": "array",
      "minItems": 1,
      "items": {"enum": ["plan", "apply", "rollback"]}
    },
    "valid_from": {"type": "string"},
    "valid_until": {"type": "string"},
    "env": {"type": "string"},
    "reason": {"type": "string"},
    "notes": {"type": "string"}
  }
}

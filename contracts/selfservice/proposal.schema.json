{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SelfServiceProposal",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "proposal_id",
    "tenant_id",
    "requested_by",
    "requested_at",
    "target_env",
    "scope",
    "desired_changes",
    "justification",
    "expires_at"
  ],
  "properties": {
    "apiVersion": {"type": "string"},
    "kind": {"const": "SelfServiceProposal"},
    "proposal_id": {"type": "string"},
    "tenant_id": {"type": "string"},
    "requested_by": {"type": "string"},
    "requested_at": {"type": "string"},
    "target_env": {"type": "string"},
    "expires_at": {"type": "string"},
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["bindings", "capacity", "exposure_request"],
      "properties": {
        "bindings": {"type": "boolean"},
        "capacity": {"type": "boolean"},
        "exposure_request": {"type": "boolean"}
      }
    },
    "desired_changes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "action", "target"],
        "properties": {
          "kind": {"enum": ["binding", "capacity", "exposure_request"]},
          "action": {"enum": ["add", "modify", "remove", "request"]},
          "target": {"type": "string"},
          "summary": {"type": "string"},
          "changes": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["path", "value"],
              "properties": {
                "path": {"type": "string"},
                "value": {},
                "note": {"type": "string"}
              }
            }
          },
          "exposure": {
            "type": "object",
            "additionalProperties": false,
            "required": ["workload"],
            "properties": {
              "workload": {"type": "string"},
              "notes": {"type": "string"}
            }
          }
        }
      }
    },
    "justification": {"type": "string"}
  }
}

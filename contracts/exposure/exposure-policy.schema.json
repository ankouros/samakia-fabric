{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExposurePolicy",
  "type": "object",
  "additionalProperties": false,
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {"type": "string"},
    "kind": {"const": "ExposurePolicy"},
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "policy_version"],
      "properties": {
        "name": {"type": "string"},
        "policy_version": {"type": "string"},
        "description": {"type": "string"}
      }
    },
    "spec": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allowlist", "invariants", "enforcement", "naming"],
      "properties": {
        "allowlist": {
          "type": "object",
          "additionalProperties": false,
          "required": ["envs", "tenants", "workloads", "providers", "variants"],
          "properties": {
            "envs": {
              "type": "array",
              "minItems": 1,
              "items": {"type": "string"}
            },
            "tenants": {
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "workloads": {
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "providers": {
              "type": "array",
              "minItems": 1,
              "items": {
                "enum": ["postgres", "mariadb", "rabbitmq", "dragonfly", "qdrant"]
              }
            },
            "variants": {
              "type": "array",
              "minItems": 1,
              "items": {"enum": ["single", "cluster"]}
            }
          }
        },
        "invariants": {
          "type": "object",
          "additionalProperties": false,
          "required": ["tls_required", "allow_plaintext_endpoints"],
          "properties": {
            "tls_required": {"const": true},
            "allow_plaintext_endpoints": {"const": false}
          }
        },
        "enforcement": {
          "type": "object",
          "additionalProperties": false,
          "required": ["prod", "non_prod"],
          "properties": {
            "prod": {
              "type": "object",
              "additionalProperties": false,
              "required": ["require_signing", "require_change_window", "require_approval"],
              "properties": {
                "require_signing": {"type": "boolean"},
                "require_change_window": {"type": "boolean"},
                "require_approval": {"type": "boolean"}
              }
            },
            "non_prod": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "require_signing",
                "require_change_window",
                "require_approval",
                "allow_execute"
              ],
              "properties": {
                "require_signing": {"type": "boolean"},
                "require_change_window": {"type": "boolean"},
                "require_approval": {"type": "boolean"},
                "allow_execute": {"type": "boolean"}
              }
            }
          }
        },
        "naming": {
          "type": "object",
          "additionalProperties": false,
          "required": ["output_format", "build_id_source", "tag_keys"],
          "properties": {
            "output_format": {"type": "string"},
            "build_id_source": {"type": "string"},
            "tag_keys": {
              "type": "array",
              "minItems": 1,
              "items": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
